<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/nitj_campus" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@color/nitJ_primary"
        android:orientation="vertical">

        <LinearLayout
            android:paddingVertical="20dp"
            android:paddingHorizontal="10dp"
            android:alpha="0.9"
            android:background="@drawable/header_rounded"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/nitJ_primaryDark"
                android:elevation="0.0dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="0.0dp">

                <TextView
                    android:id="@+id/cardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="PV"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/yellow"
                    android:textSize="35dp" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:fontFamily="@font/lato_bold"
                    android:id="@+id/headerName"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/yellow"
                    android:layout_height="wrap_content"
                    android:text="Piyush Verma" />

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:id="@+id/headerEmail"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="piyush09990@gmail.com" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>